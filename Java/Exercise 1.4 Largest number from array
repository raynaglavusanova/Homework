package com.qarayna;

import java.util.InputMismatchException;
import java.util.Scanner;

public class Zadacha4 {
    public static void main(String[] args) {
////4. Find the largest number from a given array and print it in a console. Hint: use for loop
        int n = 0;
        Scanner sc = new Scanner(System.in);
        boolean valid = false;
        while (!valid) {
            try {
                System.out.print("Enter the number of elements you want to store: ");
                n = sc.nextInt();
                if(n>0) {
                    valid = true;
                }else System.out.println("Array length cannot be 0 or less");
            } catch
            ( NegativeArraySizeException | InputMismatchException | ArrayIndexOutOfBoundsException p) {
                System.out.println("Enter a positive integer value");
                sc.nextLine();
            }
        }
        int[] array = new int[n];
        System.out.println("Enter the elements of the array: ");
        for (int i = 0; i < n; i++) {
            try {
                array[i] = sc.nextInt();
            } catch  (InputMismatchException | ArrayIndexOutOfBoundsException p){
             System.out.println("Enter an integer value");
                sc.nextLine();
                i--;
            }
        }
        System.out.println("Array elements are: ");
// accessing array elements using the for loop
        for (int i = 0; i < n; i++) {
            System.out.println(array[i]);
        }
        int largest = array[0];
        for ( int i = 1;i < array.length; i++) {
            if (array[i] > largest)
                largest = array[i];
        }
        System.out.println("The largest number from the array is: " + largest);
    }
}
